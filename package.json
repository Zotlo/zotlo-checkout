{
  "name": "zotlo-checkout",
  "version": "1.8.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && node --loader ts-node/esm builder.ts",
    "build:rc": "tsc && node --loader ts-node/esm builder.ts --mode rc",
    "preview": "vite preview"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/zotlo-checkout.umd.cjs",
  "module": "./dist/zotlo-checkout.js",
  "types": "./dist/zotlo-checkout.d.ts",
  "exports": {
    ".": {
      "types": "./dist/zotlo-checkout.d.ts",
      "import": "./dist/zotlo-checkout.js",
      "require": "./dist/zotlo-checkout.umd.cjs"
    },
    "./card": {
      "types": "./dist/zotlo-card.d.ts",
      "import": "./dist/zotlo-card.js",
      "require": "./dist/zotlo-card.umd.cjs"
    },
    "./dist/zotlo-checkout.css": "./dist/zotlo-checkout.css"
  },
  "devDependencies": {
    "@sentry/browser": "^10.20.0",
    "autoprefixer": "^10.4.21",
    "terser": "^5.43.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4"
  }
}
